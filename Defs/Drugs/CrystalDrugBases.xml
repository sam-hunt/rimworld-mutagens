      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Take {0}</ingestCommandString>
      <ingestReportString>Taking {0}.</ingestReportString>
    </ingestible>
  </ThingDef>
  
  <HediffDef Name="CrystalAddictionBase" Abstract="True">

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="CrystalDrugBase">
    <defName>Ichorio</defName>
    <label>ichorio</label>
    <description>A bottle containing an extraordinarily rare iridescent golden fluid. Almost like something out of a fairytale, it grants the drinker power. Effects can stack up to four times.</description>
    <graphicData>
      <texPath>Things/Ichorio</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<equippedAngleOffset>-150</equippedAngleOffset>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <MarketValue>5500</MarketValue>
    </statBases>
    <techLevel>Spacer</techLevel>
    <ingestible>
      <foodType>Processed</foodType>
	  <nutrition>0.08</nutrition>
      <joy>0.10</joy>
      <drugCategory>Medical</drugCategory>
      <baseIngestTicks>240</baseIngestTicks>
      <ingestSound>Ingest_Beer</ingestSound>
	  <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>IchorioHigh</hediffDef>
          <severity>0.25</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Ichorio</chemical>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>2000</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>IchorioHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>ichorio psionic</label>
    <defaultLabelColor>(179,144,212)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>class: 1</label>
		<painFactor>1.1</painFactor>
        <capMods>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <label>class: 2</label>
		<painFactor>1.2</painFactor>
        <capMods>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <label>class: 3</label>
		<painFactor>1.3</painFactor>
        <capMods>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.15</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <label>class: 4</label>
		<painFactor>1.4</painFactor>
        <capMods>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.20</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <!-- (lack of) addiction -->
  
  <ChemicalDef>
    <defName>Ichorio</defName>
    <label>ichorio</label>
	<canBinge>false</canBinge>
  </ChemicalDef>
  
</Defs>
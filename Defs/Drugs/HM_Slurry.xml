<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="CrystalDrugBase">
    <defName>MutagenSlurry</defName>
    <label>mutagenic slurry</label>
    <description>A homemade mutagenic slurry made from slime, medicine, and raw meat. It has random mutagenic properties. Being one of the most vile and foul smelling things in existance, anyone who drinks it will undoubtedly be beyond disgusted.</description>
    <graphicData>
      <texPath>Things/MutagenSlurry</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>750</WorkToMake>
      <MarketValue>300</MarketValue>
    </statBases>
    <techLevel>Spacer</techLevel>
    <ingestible>
	  <foodType>Processed</foodType>
	  <nutrition>0.08</nutrition>
      <drugCategory>Medical</drugCategory>
	  <ingestSound>Ingest_Beer</ingestSound>
	  <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
	  <ingestHoldUsesTable>false</ingestHoldUsesTable>
	  <baseIngestTicks>240</baseIngestTicks>
	  <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SlurryHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
		<addictiveness>0</addictiveness>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>1950</listOrder>
      </li>
    </comps>
  </ThingDef>
  
  
  <RecipeDef>
    <defName>MakeMutagenSlurry</defName>
    <label>make mutagenic slurry</label>
    <description>Concoct a basic mutagenic slurry with slime, medicine, and raw meat. Drink it to randomly mutate.</description>
    <jobString>Brewing mutagen.</jobString>
    <workAmount>750</workAmount>
    <workSpeedStat>DrugProductionSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
	<allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SlimeGlob</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Medicine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <MutagenSlurry>1</MutagenSlurry>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>MeatRaw</li>
      </categories>
      <thingDefs>
        <li>Medicine</li>
        <li>SlimeGlob</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>Foods</li>
		<li>Items</li>
		<li>Medicine</li>
      </categories>
    </defaultIngredientFilter>
    <workSkill>Intellectual</workSkill>
	<recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    <researchPrerequisite>MutagenTwo</researchPrerequisite>
    <skillRequirements>
        <Medicine>6</Medicine>
        <Cooking>4</Cooking>
    </skillRequirements>
  </RecipeDef>
  
  <!-- mutations -->
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurryWithering</defName>
    <label>mutation: withering</label>
    <stages>
      <li>
	    <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.10</offset>
          </li>
	    </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurrySlimy</defName>
    <label>mutation: slimy skin</label>
    <stages>
      <li>
        <statOffsets>
		  <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
		  <ComfyTemperatureMin>3</ComfyTemperatureMin>
        </statOffsets>
		<makeImmuneTo>
          <li>SilSkin</li>
		  <li>UrsaFur</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurryWired</defName>
    <label>mutation: wired</label>
    <stages>
      <li>
        <restFallFactor>0.85</restFallFactor>
		<makeImmuneTo>
          <li>UrsaSleep</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationPartBase">
      <defName>SlurryEyes</defName>
      <label>mutation: lizard eyes</label>
      <addedPartProps>
         <partEfficiency>1.10</partEfficiency>
         <isSolid>false</isSolid>
      </addedPartProps>
      <stages>
		<li>
          <statOffsets>
            <SocialImpact>-0.08</SocialImpact>
			<ShootingAccuracy>0.05</ShootingAccuracy>
          </statOffsets>
		  <capMods>
            <li>
              <capacity>Sight</capacity>
              <offset>0.05</offset>
            </li>
	      </capMods>
		</li>	 
      </stages>
   </HediffDef>
   
   <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurryStrong</defName>
    <label>mutation: strong</label>
    <stages>
      <li>
	    <statOffsets>
		  <CarryingCapacity>10</CarryingCapacity>
		  <MeleeHitChance>0.1</MeleeHitChance>
		  <MiningSpeed>0.1</MiningSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurryAgile</defName>
    <label>mutation: agile</label>
    <stages>
      <li>
	    <statOffsets>
		  <MeleeHitChance>0.1</MeleeHitChance>
		  <MeleeDodgeChance>0.1</MeleeDodgeChance>
        </statOffsets>
		<makeImmuneTo>
          <li>SlurryStagnant</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurryStagnant</defName>
    <label>mutation: stagnant</label>
    <stages>
      <li>
	    <statOffsets>
		  <MeleeHitChance>-0.1</MeleeHitChance>
		  <MeleeDodgeChance>-0.1</MeleeDodgeChance>
        </statOffsets>
		<makeImmuneTo>
          <li>SlurryAgile</li>
        </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="CrystalDrugMutationBase">
    <defName>SlurrySooth</defName>
    <label>mutation: soothing aura</label>
    <stages>
      <li>
	    <statOffsets>
		  <SocialImpact>0.15</SocialImpact>
		  <TameAnimalChance>0.1</TameAnimalChance>
          <!-- Could not resolve cross-reference: No RimWorld.StatDef named GiftImpact found to give to RimWorld.StatModifier (null stat) -->
		  <!-- <GiftImpact>0.1</GiftImpact> -->
		  <TradePriceImprovement>0.1</TradePriceImprovement>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <!-- Mutation Phase -->
  
  <HediffDef>
    <defName>SlurryHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>mutagenic reaction (slurry)</label>
    <defaultLabelColor>(179,86,132)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.30</severityPerDay>
      </li>
    </comps>
      <stages>
	    <li>
		  <label>receding</label>
          <minSeverity>0</minSeverity>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.05</offset>
            </li>
			<li>
              <capacity>Moving</capacity>
              <offset>-0.05</offset>
            </li>
          </capMods>
		</li>
        <li>
		  <label>active</label>
		  <minSeverity>0.35</minSeverity>
          <painFactor>1.6</painFactor>
		  <hungerRateFactor>1.6</hungerRateFactor>
		  <vomitMtbDays>3</vomitMtbDays>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.35</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.30</offset>
            </li>
			<li>
              <capacity>Sight</capacity>
              <offset>-0.20</offset>
            </li>
			<li>
              <capacity>Manipulation</capacity>
              <offset>-0.40</offset>
            </li>
          </capMods>
		  <hediffGivers>
            <li Class="HediffGiver_Random">
              <hediff>SlurryWithering</hediff>
              <mtbDays>16</mtbDays>
			  <partsToAffect>
                <li>Heart</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurrySlimy</hediff>
              <mtbDays>18</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurryWired</hediff>
              <mtbDays>18</mtbDays>
			  <partsToAffect>
                <li>Brain</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>UrsaClaws</hediff>
              <mtbDays>14</mtbDays>
			  <partsToAffect>
                <li>LeftHand</li>
				<li>RightHand</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurryStrong</hediff>
              <mtbDays>19</mtbDays>
			  <partsToAffect>
                <li>LeftArm</li>
				<li>RightArm</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>UrsaDisfigured</hediff>
              <mtbDays>14</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurryAgile</hediff>
              <mtbDays>15</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurryStagnant</hediff>
              <mtbDays>14</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>UrsaSlow</hediff>
              <mtbDays>13</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurrySooth</hediff>
              <mtbDays>21</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>IgniFurnace</hediff>
              <mtbDays>15</mtbDays>
			  <partsToAffect>
                <li>Stomach</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>IgniSpeed</hediff>
              <mtbDays>15</mtbDays>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SilEyes</hediff>
              <mtbDays>19</mtbDays>
			  <partsToAffect>
                <li>LeftEye</li>
				<li>RightEye</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SlurryEyes</hediff>
              <mtbDays>18</mtbDays>
			  <partsToAffect>
                <li>LeftEye</li>
				<li>RightEye</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>SilDegraded</hediff>
              <mtbDays>17</mtbDays>
			  <partsToAffect>
                <li>Brain</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>MidiaRough</hediff>
              <mtbDays>14</mtbDays>
			  <partsToAffect>
                <li>Neck</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>MyrolLung</hediff>
              <mtbDays>26</mtbDays>
			  <partsToAffect>
                <li>LeftLung</li>
				<li>RightLung</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>MidiaKeen</hediff>
              <mtbDays>26</mtbDays>
			  <partsToAffect>
                <li>Brain</li>
              </partsToAffect>
            </li>
			<li Class="HediffGiver_Random">
              <hediff>MidiaBlur</hediff>
              <mtbDays>18</mtbDays>
			  <partsToAffect>
                <li>LeftEye</li>
				<li>RightEye</li>
              </partsToAffect>
			  <countToAffect>2</countToAffect>
            </li>
          </hediffGivers>
        </li>
		<li>
		  <label>initial</label>
          <minSeverity>0.85</minSeverity>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.05</offset>
            </li>
          </capMods>
		</li>
      </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>SlurryReaction</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>SlurryHigh</hediff>
    <stages>
	  <li>
        <label>mutagenic reaction (slurry)</label>
        <description>That slurry was downright disgusting and my body doesn't feel right.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>mutagenic reaction (slurry)</label>
        <description>My insides feel like they are on fire!</description>
        <baseMoodEffect>-30</baseMoodEffect>
      </li>
	  <li>
        <label>mutagenic reaction (slurry)</label>
        <description>I am really uneasy.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>